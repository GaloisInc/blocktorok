config {
    totalTime: 3 s;
    tiemstep = 5 ms;
    T: uniform 273 K;
    Run: Model1(T);
    backend: OpenFoam
}

-------------------------------------------------------------------------------

    output : T
    technique: FVM;
    boundaryField: (ModelSolid.top, Neumann, 0;
		ModelSolid.right, Dirichlet, 273 K;
		ModelSolid.top, Neumann, 0;
		ModelSolid.left, Dirichlet, 573 K);
    physics: Heat Conduction

    Solvers: T {
      solver = PCG,
      preconditioner = DIC,
      tolerance = 1e-06,
      relTol = 0
    }

    Numerical Schemes: {
      ddt = Euler,
      grad = Gauss linear,
      laplacian(DT, T) = Gauss linear orthogonal,
      interpolation = linear,
      snGrad = orthogonal
      }
    
    -- Heat conduction along a rod
    solveV:
        T;  -- solid temperature
    math:
        DT = 4e-05 m^2/s
	\frac{\partial T}{\partial t} - DT \nabla^2 T = 0
}
}
