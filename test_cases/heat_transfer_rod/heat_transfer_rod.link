domain {
  physics {
    governing_equation: heat equation
    physical_models: components { 
      density = 19300 kg/m^3, 
      heat_capcity = 130 J/kg*K, 
      thermal_conductivity = 318 W/m*K
      }
  }

  convergence: criterion { 
    min_value = -19, 
    start_iter = 10, 
    cauchy_elements = 100, 
    cauchy_epsilon = 1E-6
  }

  input_output {
    write_interval: 250
    output_file: flow
    output_format: CSV
    mesh_filename: mesh_name.su2
    mesh_format: SU2
  }

  time: transient { 
    dt = 0.005 s, 
    max_time = 3 s, 
    start_time = 0 s, 
    inner_iter = 200, 
    outer_iter = 600
  }

  bc_value cold_end {
    field_type: uniform
    value: 273
  }

  bc_value hot_end {
    field_type: uniform
    value: 573
  }

  boundary_conditions {
    variable: temperature
    marker: top
    type: zeroGradient
  }
  
  boundary_conditions {
    variable: temperature
    marker: bottom
    type: zeroGradient
  }

  boundary_conditions {
    variable: temperature
    marker: right
    type: fixedValue
    value: cold_end
  }

  boundary_conditions {
    variable: temperature
    marker: left
    type: fixedValue
    value: hot_end
  }
}
