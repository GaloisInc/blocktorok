domain {
  physics {
    governing_equation: heat equation
    physical_models: components { density = 19300 kg/m^3, 
                                  heat_capcity = 130 J/kg*K, 
                                  thermal_conductivity = 318 W/m*K }
  }

  convergence: criterion { min_value = -19, 
                           start_iter = 10, 
                           cauchy_elements = 100, 
                           cauchy_epsilon = 1E-6
  }

  input_output {
    write_interval: 250
    output_file: flow
    output_format: CSV
    mesh_filename: mesh_name.su2
    mesh_format: SU2
  }

  time: transient { dt = 0.005, 
                    max_time = 3, 
                    start_time = 0, 
                    inner_iter = 200, 
                    outer_iter = 600
  }

  boundary_conditions {
    variable: temperature
    marker: top
    type: zeroGradient
  }
  
  boundary_conditions {
    variable: temperature
    marker: bottom
    type: zeroGradient
  }

  boundary_conditions {
    variable: temperature
    marker: right
    type: fixedValue
    value: uniform 273
  }

  boundary_conditions {
    variable: temperature
    marker: left
    type: fixedValue
    value: uniform 573
  }
}