name:                blocktorok
version:             0.1.0.0
author:              Chris Phifer
maintainer:          cphifer@galois.com
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md

executable bloctorok
  main-is:             Main.hs
  other-modules:       Language.Common

                       Language.Blocktorok.Syntax
                       Language.Blocktorok.Parser
                       Language.Blocktorok.BlockM
                       Language.Blocktorok.PPDemo

                       Language.Schema.Demo
                       Language.Schema.Env
                       Language.Schema.Parser
                       Language.Schema.Syntax
                       Language.Schema.Type

                       Language.Transform.Syntax
                       Language.Transform.Parser

                       Options
  build-depends:       base >= 3 && < 5
                     , containers
                     , megaparsec
                     , mtl
                     , optparse-applicative
                     , prettyprinter
                     , scientific
                     , text
  default-language:    Haskell2010
  ghc-options: -Wall

test-suite test
    type:               exitcode-stdio-1.0
    hs-source-dirs:     test
    main-is:            Main.hs
    default-language:   Haskell2010
    build-depends:      base >= 3 && < 5
                      , steel
                      , tasty
                      , tasty-hunit
                      , parsec
                      , mtl
                      , prettyprinter

