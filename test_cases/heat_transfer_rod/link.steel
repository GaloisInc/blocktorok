config {
    totalTime: 3 s;
    tiemstep = 5 ms;
    Run: Model1 Ts;
    backend: OpenFoam
}

-------------------------------------------------------------------------------

    output : Ts
    technique: FVM;
    internalField: uniform 273 K;
    boundaryField: (ModelSolid.top, Neumann, 0;
		ModelSolid.right, Dirichlet, 273 K;
		ModelSolid.top, Neumann, 0;
		ModelSolid.left, Dirichlet, 573 K);
    physics: Heat Conduction

    Solvers: T {
      solver = PCG,
      preconditioner = DIC,
      tolerance = 1e-06,
      relTol = 0
    }

    Numerical Schemes: {
      ddt = Euler,
      grad = Gauss linear,
      laplacian(DT, T) = Gauss linear orthogonal,
      interpolation = linear,
      snGrad = orthogonal
      }
    
    -- Heat conduction along a rod
    solveV:
        Ts;  -- solid temperature
    math:
        DT = 4e-05 m^2/s
	\frac{\partial Ts}{\partial t} - DT \nabla^2 Ts = 0
}
}
